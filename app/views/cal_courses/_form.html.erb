<%= form_for(@cal_course) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :school_type %>
    <%= f.select :school_type, options_for_select(School::LEVEL, selected: @school_type) %>
  </p>
  <p>
    <%= f.label :course_grade %>
    <%= f.select :course_grade, options_for_select(Course::GRADE, selected: @course_subject) %>
  </p>
  <table>
    <tr>
      <th><%= f.label "Add?" %></td>
      <th><%= f.label "School" %></td>
      <th><%= f.label "Teacher" %></td>
      <th><%= f.label "Time Slot" %></td>
    </tr>
    <%- @entries.each do |entry| %>
      <tr>
        <td><%= check_box_tag "timeslots[#{entry["time_id"]}]" %></td>
        <td><%= entry["school_name"] %></td>
        <td><%= entry["teacher"] %></td>
        <td><%= entry["time"] %></td>
      </tr>
    <% end %>
  </table>
  <%= f.submit 'Create ' %>
<% end %>
